{
  "name": "photoshop-app",
  "version": "0.1.0",
  "private": true,
  "description": "AI-friendly layered image editor with PSD support",
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "eslint packages/*/src/**/*.ts packages/*/src/**/*.tsx",
    "format": "prettier --write packages/*/src/**/*.ts packages/*/src/**/*.tsx",
    "format:check": "prettier --check packages/*/src/**/*.ts packages/*/src/**/*.tsx",
    "dev": "pnpm --filter @photoshop-app/app dev",
    "clean": "pnpm -r run clean"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}
